{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "pretty": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@views/*": ["./src/views/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@routes/*": ["./src/routes/*"],
      "@graphql/*": ["./src/graphql/*"]
    },
    "lib": [
      "ESNext"
    ]
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ]
}