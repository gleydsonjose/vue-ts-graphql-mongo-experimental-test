{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@database/*": ["./src/database/*"],
      "@graphql": ["./src/graphql/index"],
      "@interfaces/*": ["src/interfaces/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
